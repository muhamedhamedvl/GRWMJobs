@{
    ViewData["Title"] = "Admin Dashboard";
    var rows = ViewBag.UserRows as IEnumerable<dynamic>;
}
<section class="admin-hero text-center position-relative overflow-hidden">
    <div class="container py-5 position-relative z-1">
        <div class="page-head mb-4 d-flex justify-content-between align-items-center">
            <div class="text-start">
                <h3 class="mb-1 text-gradient">Dashboard</h3>
                <div class="lead">Overview</div>
            </div>
            <div class="page-actions">
                <a class="btn btn-outline-secondary" href="@Url.Action("Index", "User")">Users</a>
            </div>
        </div>
        <div class="row g-3 justify-content-center">
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body">
                        <div class="text-muted">Total Users</div>
                        <div class="fs-3 fw-bold">@ViewBag.TotalUsers</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="floating-shape shape1"></div>
    <div class="floating-shape shape2"></div>
    <div class="floating-shape shape3"></div>

    <style>
        .admin-hero {
            background: linear-gradient(135deg, #eef2f7, #f8fbff);
            padding: 6rem 0 3rem 0;
            position: relative;
        }
        .text-gradient {
            background: linear-gradient(45deg, #0d6efd, #20c997, #6610f2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.15;
            animation: float 8s infinite ease-in-out;
        }
        .shape1 { width: 220px; height: 220px; top: -60px; left: -60px; background: #0d6efd; }
        .shape2 { width: 180px; height: 180px; bottom: -50px; right: -50px; background: #20c997; animation-delay: 2s; }
        .shape3 { width: 140px; height: 140px; top: 30%; left: 85%; background: #6610f2; animation-delay: 4s; }

    </style>
</section>

<div class="container py-4">

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
            </div>
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Registered</th>
                            <th>Last Login</th>
                            <th>Last Seen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in rows)
                        {
                            <tr>
                                <td>@r.User.Name</td>
                                <td>@r.User.Email</td>
                                <td>@r.User.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@(r.User.LastLoginAt == null ? "-" : ((DateTime)r.User.LastLoginAt).ToLocalTime().ToString("yyyy-MM-dd HH:mm"))</td>
                                <td>@(r.LastSeen != null ? ((DateTime)r.LastSeen).ToLocalTime().ToString("yyyy-MM-dd HH:mm") : "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


