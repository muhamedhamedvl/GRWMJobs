@model GRWMJobs.DAL.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}
<div class="container py-4">
    <div class="page-head">
        <div>
            <h3 class="mb-0">Edit Category</h3>
            <div class="lead">Update category details</div>
        </div>
        <div class="page-actions">
            <a class="btn btn-outline-secondary" asp-controller="Track" asp-action="Details" asp-route-id="@Model.TrackId">Back</a>
        </div>
    </div>
    <form class="form-panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="TrackId" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Image (optional)</label>
            @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
            {
                <div class="mb-2">
                    <img src="@Model.ImagePath" alt="Current image" style="max-height:120px;border:1px solid #ddd;padding:4px;border-radius:4px;" />
                </div>
            }
            <input type="file" name="image" accept="image/*" class="form-control" />
        </div>
        <div class="page-actions">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" asp-controller="Track" asp-action="Details" asp-route-id="@Model.TrackId">Cancel</a>
        </div>
    </form>
</div>


