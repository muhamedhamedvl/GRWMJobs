@model GRWMJobs.DAL.Models.Category
@{
    ViewData["Title"] = "Create Category";
}
<div class="container py-4">
    <div class="page-head">
        <div>
            <h3 class="mb-0">Create Category</h3>
            <div class="lead">Add a new category to your track</div>
        </div>
        <div class="page-actions">
            <a class="btn btn-outline-secondary" asp-controller="Track" asp-action="Details" asp-route-id="@ViewBag.TrackId">Back</a>
        </div>
    </div>
    <form class="form-panel" asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="TrackId" value="@ViewBag.TrackId" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Image (optional)</label>
            <input type="file" name="image" accept="image/*" class="form-control" />
        </div>
        <div class="page-actions">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" asp-controller="Track" asp-action="Details" asp-route-id="@ViewBag.TrackId">Cancel</a>
        </div>
    </form>
</div>


