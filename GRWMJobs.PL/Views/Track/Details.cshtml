@model IEnumerable<GRWMJobs.DAL.Models.Category>
@{
    var track = ViewBag.Track as GRWMJobs.DAL.Models.Track;
    ViewData["Title"] = track?.Name + " Categories";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold mb-1 text-primary">@track?.Name</h2>
    </div>
    <div class="d-flex gap-2 justify-content-center mb-5">
        <a class="btn btn-outline-secondary rounded-pill" href="@Url.Action("Index", "Track")">
            <i class="fa-solid fa-arrow-left me-2"></i>All Tracks
        </a>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary rounded-pill" href="@Url.Action("Create", "Category", new { trackId = track?.Id })">
                <i class="fa-solid fa-plus me-1"></i> Add Category
            </a>
            <a class="btn btn-outline-secondary rounded-pill" href="@Url.Action("Edit", "Track", new { id = track?.Id })">
                <i class="fa-solid fa-pen me-1"></i> Edit Track
            </a>
            <a class="btn btn-outline-danger rounded-pill" href="@Url.Action("Delete", "Track", new { id = track?.Id })">
                <i class="fa-solid fa-trash me-1"></i> Delete Track
            </a>
        }
    </div>


    <div class="row g-4">
        @foreach (var cat in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card h-100 border-0 category-card rounded-4 overflow-hidden">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            @if (!string.IsNullOrEmpty(cat.ImagePath))
                            {
                                <img src="@cat.ImagePath" alt="@cat.Name image"
                                     class="me-3 rounded-circle border"
                                     style="width:52px;height:52px;object-fit:cover;" />
                            }
                            else
                            {
                                <div class="me-3 d-flex align-items-center justify-content-center rounded-circle bg-light border"
                                     style="width:52px;height:52px;">
                                    <i class="fa-solid fa-layer-group fa-lg text-success"></i>
                                </div>
                            }
                            <h5 class="mb-0 fw-semibold">@cat.Name</h5>
                        </div>

                        <a class="btn btn-outline-primary w-100 rounded-pill"
                           href="@Url.Action("Details", "Category", new { id = cat.Id })">
                            Details
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mt-3 d-flex gap-2">
                                <a class="btn btn-sm btn-outline-secondary rounded-pill px-3"
                                   href="@Url.Action("Edit", "Category", new { id = cat.Id })">
                                    Edit
                                </a>
                                <a class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                   href="@Url.Action("Delete", "Category", new { id = cat.Id })">
                                    Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Smooth card hover effect */
    .category-card {
        transition: all 0.25s ease;
        background: #fff;
    }

        .category-card:hover {
            transform: translateY(-6px) scale(1.02);
        }

    /* Better page heading */
    .page-head h2 {
        letter-spacing: -0.5px;
    }

    /* Buttons hover */
    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: #fff;
    }
</style>
