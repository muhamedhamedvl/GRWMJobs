@model GRWMJobs.DAL.Models.Answer
@{
    ViewData["Title"] = "Delete Answer";
    var q = ViewBag.Question as GRWMJobs.DAL.Models.Question;
    var categoryId = ViewBag.CategoryId as int?;
}
<div class="container py-4">
    <h3 class="text-danger">Delete Answer</h3>
    <p>Are you sure you want to delete this answer?</p>
    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-2"><strong>Question:</strong> @q?.Title</div>
            <div><strong>Answer:</strong> @Model.Content</div>
        </div>
    </div>
    <form method="post" action="@Url.Action("DeleteConfirmed","Answer", new { id = Model.Id, categoryId = categoryId, subcategoryId = q?.SubcategoryId })">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        @if (q?.SubcategoryId != null)
        {
            <a class="btn btn-secondary" href="@Url.Action("Details", "Subcategory", new { id = q?.SubcategoryId })">Cancel</a>
        }
        else
        {
            <a class="btn btn-secondary" href="@Url.Action("Details", "Category", new { id = categoryId })">Cancel</a>
        }
    </form>
</div>


