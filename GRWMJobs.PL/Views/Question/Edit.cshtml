@model GRWMJobs.DAL.Models.Question
@{
    ViewData["Title"] = "Edit Question";
}
<div class="container py-4">
    <div class="page-head">
        <div>
            <h3 class="mb-0">Edit Question</h3>
            <div class="lead">Update content or image</div>
        </div>
        <div class="page-actions">
            <a class="btn btn-outline-secondary" asp-controller="Category" asp-action="Details" asp-route-id="@Model.CategoryId">Back</a>
        </div>
    </div>
    <form class="form-panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CategoryId" />
        <input type="hidden" asp-for="TrackId" />
        <input type="hidden" asp-for="SubcategoryId" />
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Image (optional)</label>
            @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
            {
                <div class="mb-2">
                    <img src="@Model.ImagePath" alt="Current image" style="max-height:120px;border:1px solid #ddd;padding:4px;border-radius:4px;" />
                </div>
            }
            <input type="file" name="image" accept="image/*" class="form-control" />
        </div>
        @if (Model.Images != null && Model.Images.Any())
        {
            <div class="mb-3">
                <label class="form-label">Existing Images</label>
                <div>
                    @foreach (var img in Model.Images)
                    {
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <img src="@img.FilePath" alt="Extra image" style="height:90px;width:auto;border:1px solid #eee;padding:3px;border-radius:4px;" />
                            <form asp-action="DeleteImage" method="post" class="mb-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@img.Id" />
                                <input type="hidden" name="questionId" value="@Model.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
        <div class="mb-3">
            <label class="form-label">Add More Images (optional)</label>
            <input type="file" name="images" accept="image/*" class="form-control" multiple />
        </div>
        <div class="page-actions mt-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Details" asp-route-id="@Model.CategoryId">Cancel</a>
        </div>
    </form>
</div>


